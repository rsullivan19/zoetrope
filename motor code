int MotorLF = 10;
int MotorLB = 9;

void setup()
{
  pinMode(MotorLF, OUTPUT);
  pinMode(MotorLB, OUTPUT);
  pinMode(MotorRF, OUTPUT);
  pinMode(MotorRB, OUTPUT);
  Serial.begin(9600);
}

void motor_speed(int speed_value)
{
  analogWrite(10, speed_value):
